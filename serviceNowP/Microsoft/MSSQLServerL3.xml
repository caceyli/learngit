    <typeElement typeElementName="root.types.collection.connectionMethod.MSSQLServerConnection">
        <attrUIProp attributeName="scriptTable" isDisplayable="0" showInListView="0"/>
        <attrUIProp attributeName="dbUserName" isRequired="0" isDisplayable="1" attributeGroup="Microsoft SQL Server Credentials"  attributeOrder="6"  showInListView="1" controlType="text:emptyDefault=NO_NAME_SPECIFIED"/>
        <attrUIProp attributeName="dbUserPassword" isRequired="0" isDisplayable="1" attributeGroup="Microsoft SQL Server Credentials" attributeOrder="7" showInListView="1" controlType="text:emptyDefault=NO_PASSWORD_SPECIFIED"/>
        <attrUIProp attributeName="OSAuthentication" attributeGroup="Microsoft SQL Server Credentials" attributeOrder="7" controlType="checkbox" /> 
    </typeElement>

</module>
